<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/windown_background</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="switchStyle">@style/Widget.Holo.CompoundButton.Switch</item>
    </style>

    <style name="text_title_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="text_desc_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="title_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>
    
    <style name="button_base_style" parent="@android:style/Widget.Button" />
    
    <style name="button_blue_style" parent="button_base_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rectangle_background_blue</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>
    
    <style name="button_orange_style" parent="button_base_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rectangle_background_orange</item>
    </style>
    
    <style name="button_green_style" parent="button_base_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rectangle_background_green</item>
    </style>
    
    <style name="button_red_style" parent="button_base_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rectangle_background_red</item>
    </style>
    
</resources>
